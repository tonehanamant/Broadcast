<div class="modal fade" tabindex="false" id="filter_modal" role="dialog" data-bind="modal: { show: showModal, open: open, hide: hide }">
    <div class="modal-dialog modal-med" role="document">
        <div class="modal-content" id="criteria_builder_view">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <span class="modal-title">Filter Programs</span>
            </div>

            <div class="modal-body">
                <div data-bind="foreach: tempCriteriaList">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <select class="form-control" data-bind="value: Property">
                                    <option value="Program Name">Program Name</option>
                                    <option value="Airing Time">Airing Time</option>
                                    <option value="Genre">Genre</option>
                                    <option value="Affiliation">Affiliation</option>
                                    <option value="Market">Market</option>
                                </select>
                            </div>
                        </div>

                        <div class="col-md-7 ">
                            <div class="form-group" data-bind="if: Property() == 'Program Name'">
                                <select multiple="multiple" class="form-control" data-bind="options: $parent.programNamesOptions, selectedOptions: Values, select2: true"></select>
                            </div>

                            <div class="form-group criterion" data-bind="if: Property() == 'Airing Time'">
                                <input type="text" class="form-control" data-bind="value: Values, dayPartDatePicker: { containerId: 'filter_modal' }">
                            </div>

                            <div class="form-group criterion" data-bind="if: Property() == 'Genre'">
                                <select multiple="multiple" class="form-control" data-bind="options: $parent.genresOptions, optionsValue: 'Id', optionsText: 'Display', selectedOptions: Values, select2: true"></select>
                            </div>

                            <div class="form-group criterion" data-bind="if: Property() == 'Affiliation'">
                                <select multiple="multiple" class="form-control" data-bind="options: $parent.affiliatesOptions, selectedOptions: Values, select2: true"></select>
                            </div>

                            <div class="form-group criterion" data-bind="if: Property() == 'Market'">
                                <select multiple="multiple" class="form-control" data-bind="options:  $parent.marketsOptions, optionsValue: 'Id', optionsText: 'Display', selectedOptions: Values, select2: true"></select>
                            </div>
                        </div>

                        <button type="button" class="col-md-1 btn btn-danger btn-circle-remove" data-bind="click: $parent.removeCriterion">
                            <span class="glyphicon glyphicon-trash"></span>
                        </button>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <select id="criteria_builder_menu" class="form-control" data-bind="options: options, value: selectedOption, optionsCaption: 'Add Criteria'"></select>
                        </div>
                    </div>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success" data-bind="click: apply, css: { disabled: !isValid() }">Apply</button>
            </div>
        </div>
    </div>
</div>

