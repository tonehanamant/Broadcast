    </div>
    <div id="program_guide" class="tabcontent">
        <div class="form">
            <h1 class="heading">Inventory Programs Processing</h1>
            <div class="inner-form">
                <h2 class="heading2">By File</h2>
                @using (Html.BeginForm("QueInventoryProgramsJobByFileName", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
