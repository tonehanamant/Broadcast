                    <label class="label" id="result_market_coverages">@ViewBag.Message</label>
                </div>
            </div>

        }

        @using (Html.BeginForm("ImportStationMappings", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form">
                <h1 class="heading">Import station mappings</h1>
                <div class="input-container">
                    <label class="label" for="file">Filename:</label>
                    <input class="input" type="file" name="file" id="file" />
                </div>
                <input class="button" type="submit" value="Submit" id="txt Import Station Mappings" />
                <textarea class="input" rows="5" id="divJSON">@ViewBag.Message</textarea>
            </div>
        }
        <div class="form">
            <h1 class="heading">Cleanup Dayparts</h1>
            @using (Html.BeginForm("CleanupDaypartsFilterErroneousDayparts", "Maintenance", FormMethod.Post))
            {
                <div class="input-container">
                    <input class="button" type="submit" value="Show erroneous dayparts" id="submit" />
                </div>
            }
            @using (Html.BeginForm("CleanupDaypartsRepairErroneousDayparts", "Maintenance", FormMethod.Post))
            {
                <div class="input-container">
                    <input class="button" type="submit" value="Repair erroneous dayparts" id="submit" />
                </div>
            }
            <div class="input-container">
                <span class="label">Results:</span>
                <textarea class="input" rows="5" id="divCleanupJSON">@ViewBag.DaypartCleanupMessage</textarea>
            </div>
        </div>

        @using (Html.BeginForm("ImportInventoryProgramsResults", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form">
                <h2 class="heading">Import Inventory Programs Results File</h2>
                <div class="input-container">
                    <label class="label" for="file">Filename:</label>
                    <input class="input" type="file" name="file" id="file" />
                </div>
                <input class="button" type="submit" value="Submit" id="txt Inventory Programs Results" />
                <textarea class="input" rows="5" id="divJSON">@ViewBag.Message</textarea>
            </div>
        }
    </div>
    <div id="settings" class="tabcontent">
        <div class="form">
            <h1 class="heading">Testing Services</h1>
            @using (Html.BeginForm("TestFtpAccess", "Maintenance", FormMethod.Get))
            {
                <div class="input-container">
                    <input class="button" type="submit" value="Test FTP" id="txtTestFtpAccess" />
                </div>
            }
            @using (Html.BeginForm("TestEmail", "Maintenance", FormMethod.Post))
            {
                <div class="input-container">
                    <input class="button" type="submit" value="Test Email" id="test_email" />
                </div>
            }
        </div>
        @using (Html.BeginForm("SwitchProcessRatingsAutomatically", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form">
                <h1 class="heading">Temporal Application Settings</h1>
                <input class="button" type="submit" value="Switch Process Ratings Automatically flag" id="submit" />
            </div>
        }
        <div class="form">
            <h1 class="heading">Cache Management</h1>
            @using (Html.BeginForm("ClearCache", "Maintenance", FormMethod.Post))
            {
                <div class="input-container">
                    <input class="button" type="submit" value="Clear System Param Cache" id="txtClearCache" />
                </div>
            }

            @using (Html.BeginForm("ClearMediaMonthCrunchCache", "Maintenance", FormMethod.Post))
            {
                <div class="input-container">
                    <input class="button" type="submit" value="Clear Media Month Crunch Cache" id="txtClearMediaMonthCrunchCache" />
                </div>
            }
        </div>
    </div>


</body>
</html>
