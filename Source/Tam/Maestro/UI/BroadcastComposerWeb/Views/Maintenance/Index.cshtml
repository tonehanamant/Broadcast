                        <h4 class="heading4">Que Inventory Programs Job By File Name - By File Name</h4>
                        <div class="input-container">
                            <label class="label" for="fileName">FileName:</label>
                            <input class="input" type="text" name="fileName" />
                        </div>
                        <input class="button" type="submit" value="Que Inventory Programs Job By File Name" id="submit" />
                    </div>
                }
                @using (Html.BeginForm("QueueInventoryProgramsFileJob", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="inner-form">
                        <h4 class="heading4">Queue Inventory Programs File Job - By File Id</h4>
                        <div class="input-container">
                            <label class="label" for="fileId">FileId:</label>
                            <input class="input" type="text" name="fileId" />
                        </div>
                        <input class="button" type="submit" value="Queue Inventory Programs File Job" id="submit" />
                    </div>
                }
                @using (Html.BeginForm("RequeueInventoryProgramsByFileJob", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="inner-form">
                        <h4 class="heading4">Requeue Inventory Programs By File Job - By Job Id</h4>
                        <div class="input-container">
                            <label class="label" for="jobId">JobId:</label>
                            <input class="input" type="text" name="jobId" />
                        </div>
                        <input class="button" type="submit" value="Requeue Inventory Programs By File Job" id="submit" />
                    </div>
                }

            </div>
            <div class="inner-form">
                <h2 class="heading2">By Source</h2>
                @using (Html.BeginForm("QueueInventoryProgramsSourceJob", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="inner-form">
                        <h4 class="heading4">Queue Inventory Programs Source Job - By Source and Date Range</h4>
                        <div class="input-container">
                            <label class="label" for="inventorySourceId">Inventory Source Id:</label>
                            <input class="input" type="text" name="inventorySourceId" />
                        </div>
                        <div class="input-container">
                            <label class="label" for="startDateString">StartDate (yyyy-MM-dd):</label>
                            <input class="input" type="text" name="startDateString" />
                        </div>
                        <div class="input-container">
                            <label class="label" for="endDateString">EndDate (yyyy-MM-dd):</label>
                            <input class="input" type="text" name="endDateString" />
                        </div>
                        <input class="button" type="submit" value="Queue Inventory Programs Source Job" id="submit" />
                    </div>
                }
                @using (Html.BeginForm("RequeueInventoryProgramsSourceJob", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="inner-form">
                        <h4 class="heading4">Requeue Inventory Programs Source Job - By Job Id</h4>
                        <div class="input-container">
                            <label class="label" for="jobId">JobId:</label>
                            <input class="input" type="text" name="jobId" />
                        </div>
                        <input class="button" type="submit" value="Requeue Inventory Programs Source Job" id="submit" />
                    </div>
                }
                @using (Html.BeginForm("QueueProcessInventoryProgramsBySourceForWeeks", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="inner-form">
                        <h4 class="heading4">Queue Inventory Programs By Source For Weeks - 2 weeks back and 3 weeks forward from the OrientByDate</h4>
                        <div class="input-container">
                            <label class="label" for="orientByDateString">OrientByDate (yyyy-MM-dd):</label>
                            <input class="input" type="text" name="orientByDateString" />
                        </div>
                        <input class="button" type="submit" value="Queue Inventory Programs By Source For Weeks" id="submit" />
                    </div>
                }

                @using (Html.BeginForm("QueueProcessInventoryProgramsBySourceJobUnprocessedBetweenDates", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <div class="inner-form">
                        <h4 class="heading4">Queue Inventory Programs By Source Job Unprocessed Between Dates - By Source and Date Range where the inventory is not yet processed.</h4>
                        <div class="input-container">
                            <label class="label" for="inventorySourceId">Inventory Source Id :</label>
                            <input class="input" type="text" name="inventorySourceId" />
                        </div>
                        <div class="input-container">
                            <label class="label" for="startDateString">StartDate (yyyy-MM-dd):</label>
                            <input class="input" type="text" name="startDateString" />
                        </div>
                        <div class="input-container">
                            <label class="label" for="endDateString">EndDate (yyyy-MM-dd):</label>
                            <input class="input" type="text" name="endDateString" />
                        </div>
                        <input class="button" type="submit" value="Queue Inventory Programs By Source Job Unprocessed Between Dates" id="submit" />
                    </div>
