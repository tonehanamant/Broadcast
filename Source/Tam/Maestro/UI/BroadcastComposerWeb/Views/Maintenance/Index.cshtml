
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <script >
        function copyToClip() {
            var copyText = document.getElementById("divJSON");
            /* Select the text field */
            copyText.select();
            /* Copy the text inside the text field */
            document.execCommand("Copy");
            
        }
    </script>
</head>
<body>
    
<form action="" method="post" enctype="multipart/form-data">
  
    <label for="file">Filename:</label>
    <input type="file" name="file" id="file" />
    <br/>
    <input type="submit" text="generate JSON" />
    <br/>
    <a href="javascript:copyToClip();">Copy to Clipboard</a>

    <br />
    @{
        var IdValue = "";
        if (ViewBag.Id != null)
        {
            IdValue = "<div>Uploaded AffidavidID = " + ViewBag.Id + "</div>";
        }
    }
    @IdValue
    <div><b>Results:</b></div>
    <textarea rows="20" style="width: 600px;" id="divJSON">@ViewBag.Message</textarea>
</form>

<div>
</div>
</body>
</html>
