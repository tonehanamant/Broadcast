
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <script>
        function copyToClip() {
            var copyText = document.getElementById("divJSON");
            /* Select the text field */
            copyText.select();
            /* Copy the text inside the text field */
            document.execCommand("Copy");

        };
        var openTab = function (evt, tabId) {
            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            };
            tabEl = document.getElementById(tabId);
            tabEl.style.display = "block";
            tabEl.className += " active";
            evt.currentTarget.className += " active";
        }
        var clickFirsLink = function () {
            tablinks = document.getElementsByClassName("tablinks");
            firstLink = tablinks[0]
            if (firstLink) {
                firstLink.click()
            }
        }
        document.addEventListener("DOMContentLoaded", clickFirsLink);
    </script>
    <style>
        body {
            font-family: Arial;
            padding: 20px 0
        }

        /* Style the tab */
        .tab {
            overflow: hidden;
            border: 1px solid #ccc;
            background-color: #f1f1f1;
        }

            /* Style the buttons inside the tab */
            .tab button {
                background-color: inherit;
                float: left;
                border: none;
                outline: none;
                cursor: pointer;
                padding: 14px 16px;
                transition: 0.3s;
                font-size: 18px;
                color: #41515f;
            }

                /* Change background color of buttons on hover */
                .tab button:hover {
                    background-color: #b3c0cb;
                }

                /* Create an active/current tablink class */
                .tab button.active {
                    background-color: #b3c0cb;
                }

        /* Style the tab content */
        .tabcontent {
            display: none;
            padding: 6px 12px;
            border: 1px solid #b3c0cb;
            border-top: none;
        }

        .input-container {
            display: flex;
            flex-direction: column;
            max-width: 800px;
        }

        .input-container-row {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            flex-basis: auto;
            max-width: 800px;
        }

            .input-container-row > *:first-child {
                width: 60%;
            }

            .input-container-row > *:last-child {
                width: 35%;
            }

        .input {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            border: 0;
            font-weight: 500;
            font-size: 14px;
            font-family: "MuseoSans";
            line-height: 24px;
            color: #41515f;
            background: #fff;
            padding-top: 3px !important;
            padding-bottom: 3px !important;
            padding-right: 3px;
            padding-left: 3px;
            border-radius: 4px;
            border: 1px solid #b3c0cb;
            transition: border 0.15s ease-in-out;
            width: inherit;
            text-overflow: ellipsis;
            max-width: 800px;
        }

        .label {
            display: inline-block;
            font-weight: 600;
            font-size: 16px;
            font-family: "MuseoSans";
            line-height: 24px;
            color: #688197;
            margin-bottom: 4px;
        }

        .button {
            position: relative;
            background: #41515f;
            border: 1px solid #41515f;
            text-align: center;
            transition: all ease-in-out 0.2s;
            min-width: 60px;
            cursor: pointer;
            border-radius: 4px;
            padding: 7px 23px;
            color: #fff;
            font-weight: 500;
            font-size: 14px;
            font-family: "MuseoSans";
            line-height: 24px;
            max-width: 800px;
        }

        .form {
            padding: 5px 30px;
            display: flex;
            flex-direction: column;
            border-bottom: 1px solid #b3c0cb;
        }
            .form:last-child {
                border-bottom: none;
            }

            .inner-form {
                display: flex;
                flex-direction: column;
            }

            .inner-form > * {
                margin-bottom: 10px;
                width: 100%;
            }

        .form > * {
            margin-bottom: 10px;
            width: 100%;
        }

        .heading {
            font-weight: 600;
            font-size: 24px;
            font-family: "MuseoSans";
            color: #41515f;
        }

        .heading2 {
            font-weight: 600;
            font-size: 18px;
            font-family: "MuseoSans";
            color: #41515f;
        }

        .heading4 {
            font-weight: 600;
            font-size: 16px;
            font-family: "MuseoSans";
            color: #41515f;
        }
    </style>
</head>
<body>
    <div class="tab">
        <button class="tablinks" name="inventory" onclick="openTab(event, 'inventory')">Inventory</button>
        <button class="tablinks" name="program_guide" onclick="openTab(event, 'program_guide')">Program Guide</button>
        <button class="tablinks" name="planning" onclick="openTab(event, 'planning')">Plannning</button>
        <button class="tablinks" name="posting" onclick="openTab(event, 'posting')">Posting</button>
        <button class="tablinks" name="reference_data" onclick="openTab(event, 'reference_data')">Reference Data</button>
        <button class="tablinks" name="settings" onclick="openTab(event, 'settings')">Status & Configuration</button>
    </div>
