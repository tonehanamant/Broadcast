
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <script>
        function copyToClip() {
            var copyText = document.getElementById("divJSON");
            /* Select the text field */
            copyText.select();
            /* Copy the text inside the text field */
            document.execCommand("Copy");

        }
    </script>
</head>
<body>
    <form action="" method="post" enctype="multipart/form-data">

        <label for="file">Filename:</label>
        <input type="file" name="file" id="file" />
        <br />
        <input type="submit" text="generate JSON" />
        <br />
        <a href="javascript:copyToClip();">Copy to Clipboard</a>

        <br />
        @{
            var IdValue = "";
            if (ViewBag.Id != null)
            {
                IdValue = "Uploaded AffidavidID = " + ViewBag.Id + "";
            }
        }
        @IdValue
        <div><b>Results:</b></div>
        <textarea rows="20" style="width: 600px;" id="divJSON">@ViewBag.Message</textarea>
    </form>


    <div>
        <h1>Testing Services</h1>
        <div>
            @using (Html.BeginForm("TestFtpAccess", "Maintenance", FormMethod.Get))
            {
                <input type="submit" value="Test FTP" id="txtTestFtpAccess" />
            }
        </div>
        <div>
            @using (Html.BeginForm("TestEmail", "Maintenance", FormMethod.Post))
            {
                <input type="submit" value="Test Email" id="test_email" />
            }
        </div>
    </div>
    <div>
        <h1>Application Jobs</h1>
        <div>
            @using (Html.BeginForm("RequeueInventoryRatingsJob", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="text" name="jobId" />
                <input type="submit" value="Requeue Ratings Job" id="submit" />
            }
        </div>
        <div>
            @using (Html.BeginForm("RequeueScxGenerationJob", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="text" name="jobId" />
                <input type="submit" value="Requeue SCX Generation Job" id="submit" />
            }
        </div>
        <div>
            @using (Html.BeginForm("ResetRatingsJobStatus", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="text" name="jobId" />
                <input type="submit" value="Reset Ratings Job Status" id="submit" />
            }
        </div>
        <div>
            @using (Html.BeginForm("ResetScxGenerationJobStatus", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="text" name="jobId" />
                <input type="submit" value="Reset SCX Generation Job Status" id="submit" />
            }
        </div>
        <div>
            @using (Html.BeginForm("QueueInventorySourceAggregation", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="text" name="inventorySourceId" />
                <input type="submit" value="Queue Inventory Source Aggregation" id="submit" />
            }
        </div>
        <div>
            @using (Html.BeginForm("ForceCompletePlanPricingJob", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="text" name="jobId" />
                <input type="submit" value="Force complete a Plan Pricing Job" id="submit" />
            }
        </div>

        <div>
            <h4>RerunPlanPricingJob</h4>
            @using (Html.BeginForm("RerunPlanPricingJob", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <td>JobId : <input type="text" name="jobId" /></td><br />
                <input type="submit" value="RerunPlanPricingJob" id="submit" />
            }
        </div>

    </div>

    <div>
        <h1>Cache Management</h1>
        @using (Html.BeginForm("ClearCache", "Maintenance", FormMethod.Post))
        {
            <input type="submit" value="Clear System Param Cache" id="txtClearCache" />
        }

        @using (Html.BeginForm("ClearMediaMonthCrunchCache", "Maintenance", FormMethod.Post))
        {
            <input type="submit" value="Clear Media Month Crunch Cache" id="txtClearMediaMonthCrunchCache" />
        }
    </div>
    <div>
        <h1>Upload Market Coverages</h1>
        @using (Html.BeginForm("UploadMarketCoverageFile", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <label for="file">Filename:</label>
            <input type="file" name="file" id="file" />
            <br />
            <input type="submit" text="Upload Market Coverages" />
            <br />
            <div>
                <b>Result:</b>
                <label style="width: 600px;" id="result_market_coverages">@ViewBag.Message</label>
            </div>
        }
    </div>
    <div>
        <h1>Upload NTI Universes</h1>
        @using (Html.BeginForm("UploadNTIUniversesFile", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <label for="file">Filename:</label>
            <input type="file" name="file" id="file" />
            <br />
            <input type="submit" text="Upload NTI Universes" />
            <br />
            <div>
                <b>Result:</b>
                <label style="width: 600px;" id="result_nti_universes">@ViewBag.Message</label>
            </div>
        }
    </div>

    <div>
        <h1>Temporal Application Settings</h1>
        <div>
            @using (Html.BeginForm("SwitchProcessRatingsAutomatically", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <input type="submit" value="Switch ProcessRatingsAutomatically flag" id="submit" />
            }
        </div>
    </div>

    <div>
        <h1>Cleanup Dayparts</h1>
        <div>
            @using (Html.BeginForm("CleanupDaypartsFilterErroneousDayparts", "Maintenance", FormMethod.Post))
            {
                <input type="submit" value="Show erroneous dayparts" id="submit" />
            }
            @using (Html.BeginForm("CleanupDaypartsRepairErroneousDayparts", "Maintenance", FormMethod.Post))
            {
                <input type="submit" value="Repair erroneous dayparts" id="submit" />
            }
            <div><b>Results:</b></div>
            <textarea rows="20" style="width: 600px;" id="divCleanupJSON">@ViewBag.DaypartCleanupMessage</textarea>
        </div>
    </div>
    <div>
        <h1>Import station mappings</h1>
        @using (Html.BeginForm("ImportStationMappings", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <label for="file">Filename:</label>
            <br />
            <input type="file" name="file" id="file" />
            <br />

            <input type="submit" value="Submit" id="txtImportStationMappings" />
            <textarea rows="20" style="width: 600px;" id="divJSON">@ViewBag.Message</textarea>
        }
    </div>

    <div>
        <h1>Inventory Programs Processing</h1>
        <div>
            <h2>By File</h2>
            
            <div>
                <h4>QueInventoryProgramsJobByFileName - By File Name</h4>
                @using (Html.BeginForm("QueInventoryProgramsJobByFileName", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <td>FileName : <input type="text" name="fileName" /></td><br />
                    <input type="submit" value="QueInventoryProgramsJobByFileName" id="submit" />
                }
            </div>

            <div>
                <h4>QueueInventoryProgramsFileJob - By File Id</h4>
                @using (Html.BeginForm("QueueInventoryProgramsFileJob", "Maintenance", FormMethod.Post, new {enctype = "multipart/form-data"}))
                {
                    <td>FileId : <input type="text" name="fileId"/></td><br/>
                    <input type="submit" value="QueueInventoryProgramsFileJob" id="submit"/>
                }
            </div>

            <div>
                <h4>RequeueInventoryProgramsByFileJob - By Job Id</h4>
                @using (Html.BeginForm("RequeueInventoryProgramsByFileJob", "Maintenance", FormMethod.Post, new {enctype = "multipart/form-data"}))
                {
                    <td>JobId : <input type="text" name="jobId"/></td><br/>
                    <input type="submit" value="RequeueInventoryProgramsByFileJob" id="submit"/>
                }
            </div>
        </div>
        <div>
            <h2>By Source</h2>
            <div>
                <h4>QueueInventoryProgramsSourceJob - By Source and Date Range</h4>
                @using (Html.BeginForm("QueueInventoryProgramsSourceJob", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <td>Inventory Source Id : <input type="text" name="inventorySourceId" /></td><br />
                    <td>StartDate (yyyy-MM-dd) : <input type="text" name="startDateString" /></td><br />
                    <td>EndDate (yyyy-MM-dd) : <input type="text" name="endDateString" /></td><br />
                    <input type="submit" value="QueueInventoryProgramsSourceJob" id="submit" />
                }
                <br />
            </div>

            <div>
                <h4>RequeueInventoryProgramsSourceJob - By Job Id</h4>
                @using (Html.BeginForm("RequeueInventoryProgramsSourceJob", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <td>JobId : <input type="text" name="jobId" /></td><br />
                    <input type="submit" value="RequeueInventoryProgramsSourceJob" id="submit" />
                }
            </div>

            <div>
                <h4>QueueInventoryProgramsBySourceForWeeks - 2 weeks back and 3 weeks forward from the OrientByDate</h4>
                @using (Html.BeginForm("QueueProcessInventoryProgramsBySourceForWeeks", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <td>OrientByDate (yyyy-MM-dd)  : <input type="text" name="orientByDateString" /></td><br />
                    <input type="submit" value="QueueInventoryProgramsBySourceForWeeks" id="submit" />
                }
            </div>

            <div>
                <h4>QueueInventoryProgramsBySourceJobUnprocessedBetweenDates - By Source and Date Range where the inventory is not yet processed.</h4>
                @using (Html.BeginForm("QueueProcessInventoryProgramsBySourceJobUnprocessedBetweenDates", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    <td>Inventory Source Id : <input type="text" name="inventorySourceId" /></td><br />
                    <td>StartDate (yyyy-MM-dd) : <input type="text" name="startDateString" /></td><br />
                    <td>EndDate (yyyy-MM-dd) : <input type="text" name="endDateString" /></td><br />
                    <input type="submit" value="QueueInventoryProgramsBySourceJobUnprocessedBetweenDates" id="submit" />
                }
                <br />
            </div>
        </div>
        
        <div>
            <h2>Import Inventory Programs Results File</h2>
            @using (Html.BeginForm("ImportInventoryProgramsResults", "Maintenance", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <label for="file">Filename:</label>
                <br />
                <input type="file" name="file" id="file" />
                <br />

                <input type="submit" value="Submit" id="txtInventoryProgramsResults" />
                <textarea rows="20" style="width: 600px;" id="divJSON">@ViewBag.Message</textarea>
            }
        </div>
    </div>
</body>
</html>
