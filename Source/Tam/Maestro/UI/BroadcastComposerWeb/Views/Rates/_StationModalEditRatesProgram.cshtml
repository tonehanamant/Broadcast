<div class="modal fade" tabindex="-1" role="dialog" id="station_edit_rates_program_modal">
    <div class="modal-dialog modal-med-xl" role="document">
        <div class="modal-content">
            <form id="update_program_form" action="#">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">Edit Program</h4>
                </div>

                <div class="modal-body modal-body-lg">
                    <div class="row">
                        <div class="col-md-3">
                            <label>Program Name</label>
                            <div class="form-group">
                                <input id="update_program_name_input" type="text" class="form-control" disabled>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label>Air Time</label>
                            <div class="form-group">
                                <input id="update_program_airtime_input" type="text" class="form-control" disabled>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label>Genre</label>
                            <div class="form-group">
                                <select multiple id="update_program_genre_input" class="form-control select2"></select>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <label>Flight</label>
                            <div class="form-group">
                                <input id="update_program_flight_input" type="text" class="form-control" disabled>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>15s Spot Cost</label>
                                        <input id="update_program_spot15_input" name="update_program_spot15_input" type="text" class="form-control update-spot-cost">
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>30s Spot Cost</label>
                                        <input id="update_program_spot30_input" name="update_program_spot30_input" type="text" class="form-control update-spot-cost">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="form-group">
                                <label>HH Impressions</label>
                                <input id="update_program_hhimpressions_input" name="update_program_hhimpressions_input" type="text" class="form-control">
                                <small style="font-style: italic;">* multiplied by 1000</small>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <div class="row">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>HH Rating</label>
                                        <input id="update_program_hhrating_input" name="update_program_hhrating_input" type="text" class="form-control">
                                    </div>
                                </div>

                                <div class="col-md-7">
                                    <div class="form-group">
                                        <label>Effective Date</label>
                                        <input id="update_program_effective_date_input" name="update_program_effective_date_input" type="text" class="form-control read-only-picker">
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="help-block" style="margin-top:20px;">Effective Date selection will be set to Monday of each Week</div>
                        </div>
                    </div>
                </div>
                
                <input id="update_program_audience_id_input" name="update_program_audience_id_input" type="hidden" />

                <div class="modal-footer">
                    <button type="button" id="update_program_cancel_btn" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="button" id="update_program_save_btn" class="btn btn-success">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>