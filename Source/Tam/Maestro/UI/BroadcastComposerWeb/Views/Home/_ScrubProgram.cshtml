<!-- SCRUB PROGRAM -->
<div class="modal fade" tabindex="-1" role="dialog" id="scrub_mapping_program_modal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Program Mismatch</h4>
            </div>
            <div class="modal-body">
                <p class="row col-md-12 line">
                    This spot could not be matched to a contracted program. If this is an alternate name for a contracted program select
                    "Save Mapping". If the program is part of a contracted program block, select "One Time Accept". Otherwise, mark this spot as "Out of Spec".
                </p>
                <br />
                <div class="row line">
                    <div class="col-xs-6 to-map-column">
                        <div class="row mapping-title">
                            <strong>BVS Program Name</strong>
                        </div>
                        <div class="row">
                            <span data-bind="text: MappedItem() !== undefined ? MappedItem().Program : ''"></span>
                        </div>
                    </div>
                    <div class="col-xs-6">
                        <div class="row mapping-title">
                            <strong>Contracted Program</strong>
                        </div>

                        <div class="row mapping-value" data-bind="if: !SingleProgramMapping()">
                            <select data-bind="options:  MappedItem() !== undefined ? MappedItem().SchedulePrograms : null, optionsText: 'DisplayName', value: SelectedProgram, optionsCaption: 'Select a contracted program to use'"></select>
                        </div>

                        <div class="row mapping-value" data-bind="if: SingleProgramMapping">
                            <span data-bind="text: MappedItem() !== undefined ? MappedItem().SchedulePrograms[0].DisplayName : ''"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger pull-left" data-dismiss="modal" data-bind="click: setOutOfSpec">Out of Spec</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-default" data-bind="css: { disabled: !canMap() }, click: acceptAsBlock">One Time Accept</button>
                <button type="button" class="btn btn-default" data-bind="css: { disabled: !canMap() }, click: openConfirmation">Save Mapping</button>
            </div>
        </div>
    </div>
</div>
